.container.padding
	.row
		.col-md-8
			.panel.panel-primary
				.panel-heading
					Cambiar Contraseña
				.panel-body
					%form{:method=>"post"}
						.form-group
							%label.sr-only{:for => "password"} Password
							%input.form-control{:type=>"password",:name=>"password", :placeholder=>"Nueva Contraseña"}
						.form-group
							%label.sr-only{:for => "password_confirmation"} Confirmar Password
							%input.form-control{:type=>"password",:name=>"password_confirmation", :placeholder=>"Confirmar Nueva Contraseña"}
						%button.btn.btn-primary{:type=>"submit"}
							Enviar
