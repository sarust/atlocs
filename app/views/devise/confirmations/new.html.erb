<div class="container">
  <div class="row" style="margin-top:40px;">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
      <h2>Volver a enviarme instrucciones de confirmaci√≥n</h2>

      <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
        <%# f.error_notification %>
        <%# f.full_error :confirmation_token %>

        <div class="form-group" style="margin-top:40px;">
          <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, wrapper: false, label: false %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Volver a enviar instrucciones de confirmacion", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>

      <%# render "devise/shared/links" %>
    </div>
    <div class="col-md-2">
    </div>
  </div>
</div>
