<div class="col-md-4 col-md-offset-4">
	<div class="card-register ">
		<h2>Registrarse</h2>
		<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= f.error_notification %>
	  <div class="form-inputs">
	  	<label>E-mail</label>
	    <%= f.input :email, required: true, autofocus: true, label: false, wrapper: false, input_html: {class: "form-control"} %>
	    <label>Contraseña</label>
	    <%= f.input :password, required: true, label: false, wrapper: false, hint: ("#{@minimum_password_length} caracteres mínimo" if @minimum_password_length), input_html: {class: "form-control"} %>
	    <label>Repetir Contraseña</label>
	    <%= f.input :password_confirmation, required: true, label: false, wrapper: false, input_html: {class: "form-control"} %>
	  </div>
	  <div class="form-actions">
	    <%= f.button :submit, "Registrarse", class: "btn-primary btn btn-full m-t-20" %>
	  </div>
	<% end %>
	</div>
</div>

<%= render "devise/shared/links" %>
