%section.main-content
  .container
    .row
      .col-md-6.offset-md-3
        %h1=t('general.contact')
        %p=t('contact_form.subtitle')
        %form{:method => "post"}
          %input{:type=>"hidden",:value=>form_authenticity_token,:name=>"authenticity_token"}
          .form-group
            %label=t('contact_form.email')
            %input.form-control{:name => "email", :type => "email",:value=>params[:email]}
          .form-group
            %label=t('contact_form.phone')
            %input.form-control{:name => "cellphone", :type => "text", :value=>params[:cellphone]}
          .form-group
            %label=t('contact_form.subject')
            %input.form-control{:name => "subject", :type => "text", :value=>params[:subject]}
          .form-group
            %label=t('contact_form.message')
            %textarea.form-control{:name => "body"}
              =params[:body]
          .form-action
            %button.btn.btn-primary{:type => "submit"}
              =t('contact_form.submit')
              %i.mdi.mdi-send.mdi-lg
